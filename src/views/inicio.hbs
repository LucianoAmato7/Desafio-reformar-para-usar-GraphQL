<script type="module" src="../../js/inicio.js"></script>

<div class="container mt-3">
    <div id="UserContainer">
        <div class="d-flex jumbotron py-2 align-items-center justify-content-between" style="background-color:gray;">
            <div class="d-flex flex-column w-25">
                <h3 class="align-self-center">
                    <strong>{{toRender.username}}</strong>
                </h3>
               <img 
                    {{#if toRender.hostBoolean}}
                    src="{{toRender.protocol}}://{{toRender.host}}:{{toRender.port}}{{toRender.image}}"
                    {{else}}
                    src="{{toRender.protocol}}s://{{toRender.host}}{{toRender.image}}"
                    {{/if}}
                    alt="avatar de {{toRender.username}}" 
                    class="w-50 bg-white align-self-center"
                >
            </div>
            <ul class="mr-5">
                <h3 class="text-decoration-underline">Informacion del Perfil:</h2>
                <li>Email: {{toRender.email}}</li>
                <li>Edad: {{toRender.age}}</li>
                <li>Direcci√≥n: {{toRender.address}}</li>
                <li>Telefono: {{toRender.phone_number}}</li>
            </ul>
            <form action="/session/logout" method="post" class="align-self-center">
                <input type="submit" class="btn btn-warning" id="btnLogOut" value="Desloguear">
            </form>
        </div>
    </div>

    <div class="jumbotron">

        <h2 style="color:blue;">Agregar productos</h2>
        <br/>

        <form>

            <div class="form-group">
                <label for="nombre"><b>Nombre</b></label>
                <input type="text" id="nombre" class="form-control" name="title" required>
            </div>

            <div class="form-group">
                <label for="marca"><b>Marca</b></label>
                <input type="text" id="marca" class="form-control" name="brand" required>
            </div>

            <div class="form-group">
                <label for="Precio"><b>Precio</b></label>
                <input type="number" id="precio" class="form-control" name="price" required>
            </div>

            <div class="form-group">
                <label for="stock"><b>Stock</b></label>
                <input type="number" id="stock" class="form-control" name="stock" required>
            </div>

            <div class="form-group">
                <label for="URLImagen"><b>URL imagen</b></label>
                <input type="url" id="URLImagen" class="form-control" name="thumbnail">
            </div>

            <input type="submit" class="btn btn-success mt-3" id="enviarProd" value="Enviar">

        </form>

        <br/>

        <h2 style="color:blue;" class="border-top border-dark mt-3 pt-5">Productos</h2>

        <div id="vistaProdsContainer"></div>

    </div>
</div>    